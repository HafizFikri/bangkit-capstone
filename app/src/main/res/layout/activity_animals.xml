<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#5AC5B5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subcategory.AnimalsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/music_on"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/icon_bg"
            android:padding="10dp"
            app:icon="@drawable/ic_music_24"
            app:shapeAppearanceOverlay="@style/icon_top"
            style="?android:attr/buttonBarButtonStyle" />

        <Space
            android:layout_width="220dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/help"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/icon_bg"
            android:padding="13dp"
            app:icon="@drawable/ic_help_24"
            app:shapeAppearanceOverlay="@style/icon_top" />

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/quit"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/icon_bg"
            android:padding="14dp"
            app:icon="@drawable/ic_exit_24"
            app:shapeAppearanceOverlay="@style/icon_top" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="214dp"
        android:layout_height="450dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/land_animals"
            android:layout_width="215dp"
            android:layout_height="100dp"
            android:background="@drawable/animals_land"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/hewan_darat"
            android:textAlignment="center"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/underwater_animals"
            android:layout_width="215dp"
            android:layout_height="100dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/animals_underwater"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/hewan_air"
            android:textAlignment="center"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/insects"
            android:layout_width="215dp"
            android:layout_height="100dp"
            android:layout_marginTop="315dp"
            android:background="@drawable/animals_insect"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="415dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/serangga"
            android:textAlignment="center"
            android:textSize="25sp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>