<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="horizontal"
    android:padding="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="MissingConstraints">

    <Button
        android:id="@+id/music_on"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/icon_bg"
        android:padding="12dp"
        app:icon="@drawable/ic_music_24"
        app:iconSize="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/icon_top"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/level"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/icon_bg"
        android:paddingStart="-7dp"
        android:text="@string/stage_1"
        android:textAlignment="viewStart"
        android:textSize="24sp"
        app:icon="@drawable/ic_baseline_stars_24"
        app:iconSize="75dp"
        app:layout_constraintEnd_toStartOf="@+id/pause"
        app:shapeAppearanceOverlay="@style/level"
        tools:ignore="RtlSymmetry"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/pause"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/icon_bg"
        android:padding="14dp"
        app:icon="@drawable/ic_baseline_pause_24"
        app:iconSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/icon_top"
        tools:layout_editor_absoluteY="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>