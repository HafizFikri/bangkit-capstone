<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/music_on"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/icon_bg"
            android:padding="10dp"
            app:icon="@drawable/ic_music_24"
            app:shapeAppearanceOverlay="@style/icon_top"
            style="?android:attr/buttonBarButtonStyle" />

        <Space
            android:layout_width="220dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/help"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/icon_bg"
            android:padding="13dp"
            app:icon="@drawable/ic_help_24"
            app:shapeAppearanceOverlay="@style/icon_top" />

        <Space
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/quit"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/icon_bg"
            android:padding="14dp"
            app:icon="@drawable/ic_exit_24"
            app:shapeAppearanceOverlay="@style/icon_top" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/continueButton"
            android:layout_width="215dp"
            android:layout_height="87dp"
            android:background="@drawable/button_shape"
            android:text="@string/lanjut"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_button_blue"/>

        <Button
            android:id="@+id/newButton"
            android:layout_width="215dp"
            android:layout_height="87dp"
            android:layout_marginTop="116dp"
            android:background="@drawable/button_shape"
            android:text="@string/new_game"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_button_blue" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>